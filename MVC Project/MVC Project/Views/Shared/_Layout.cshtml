<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_Project.styles.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #6366f1; /* Indigo */
            --secondary-color: #10b981; /* Emerald */
            --accent-color: #f59e0b; /* Amber */
            --bg-color: #f8fafc; /* Slate light */
            --text-color: #1e293b; /* Slate dark */
            --white: #ffffff;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        body {
            background: linear-gradient(135deg, var(--bg-color) 0%, #e2e8f0 100%);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            min-height: 100vh;
            position: relative;
        }

        /* Header */
        header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #4f46e5 100%);
            color: var(--white);
            box-shadow: var(--shadow-lg);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-hero {
            background: linear-gradient(135deg, var(--primary-color) 0%, #4f46e5 100%);
            color: var(--white);
            padding: 4rem 0;
            text-align: center;
            border-radius: 0 0 20px 20px;
            margin-bottom: 0;
            position: relative;
            overflow: hidden;
        }

            .header-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                animation: grain 0.2s linear infinite;
            }

            .header-hero h1 {
                font-size: 3rem;
                margin-bottom: 1rem;
                animation: animate__slideInDown 1s ease-out;
            }

            .header-hero p {
                font-size: 1.2rem;
                opacity: 0.9;
                animation: animate__fadeInUp 1s ease-out 0.3s both;
            }

        /* Navbar */
        .navbar {
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.95) 0%, rgba(79, 70, 229, 0.95) 100%) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: var(--white) !important;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: var(--accent-color) !important;
            }

        .nav-link {
            color: var(--white) !important;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            padding-right: 1rem;
        }

            .nav-link:hover {
                color: var(--accent-color) !important;
                transform: translateY(-2px);
            }

            .nav-link i {
                margin-right: 0.5rem;
                opacity: 0.8;
                transition: opacity 0.3s ease;
            }

            .nav-link:hover i {
                opacity: 1;
            }

        .navbar-toggler {
            border: 1px solid var(--white);
            color: var(--white);
        }

        /* Main Content */
        main {
            padding: 2rem 0;
            min-height: calc(100vh - 140px); /* Adjust for header and footer */
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        /* Footer */
        footer {
            background: linear-gradient(135deg, var(--text-color) 0%, #334155 100%);
            color: var(--white);
            padding: 2rem 0;
            margin-top: auto;
            box-shadow: var(--shadow);
        }

        .footer a {
            color: var(--accent-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer a:hover {
                color: var(--primary-color);
            }

        /* Animations */
        .animate__fadeIn {
            animation-duration: 1s;
            animation-fill-mode: both;
        }

        .animate__slideInUp {
            animation-duration: 0.8s;
            animation-fill-mode: both;
        }

        /* Custom Cards */
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: var(--shadow);
            transition: all 0.3s ease;
            overflow: hidden;
            background: var(--white);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
            }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, #4f46e5 100%);
            color: var(--white);
            font-weight: bold;
            border: none;
        }

        /* Buttons */
        .btn {
            border-radius: 10px;
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, #4f46e5 100%);
            border: none;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
                transform: translateY(-2px);
            }

        .btn-info {
            background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--accent-color) 0%, #d97706 100%);
        }

        .btn-danger {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        /* Table Styling */
        .table {
            background: var(--white);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: var(--shadow);
        }

            .table th {
                background: linear-gradient(135deg, var(--primary-color) 0%, #4f46e5 100%);
                color: var(--white);
                border: none;
            }

            .table td {
                vertical-align: middle;
                border-color: #e2e8f0;
            }

        /* Responsive */
        media (max-width: 768px) {
            .navbar-brand

        {
            font-size: 1.2rem;
        }

        .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .header-hero h1 {
            font-size: 2rem;
        }

        }

        /* Custom Header Animation */
        keyframes grain {
            0%, 100%

        {
            transform: translate(0, 0);
        }

        10% {
            transform: translate(-5%, -5%);
        }

        20% {
            transform: translate(-10%, 5%);
        }

        30% {
            transform: translate(5%, -10%);
        }

        40% {
            transform: translate(-5%, 15%);
        }

        50% {
            transform: translate(-10%, 5%);
        }

        60% {
            transform: translate(15%, 0%);
        }

        70% {
            transform: translate(0%, 10%);
        }

        80% {
            transform: translate(-15%, 0%);
        }

        90% {
            transform: translate(10%, 5%);
        }

        }
    </style>
</head>
<body>
    <!-- Header Hero Section -->
    <div class="container-fluid px-0">
        <section class="home-hero text-center py-5" style="background: linear-gradient(135deg, #6366f1 0%, #4f46e5 50%, #10b981 100%); color: white; position: relative; overflow: hidden;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <h1 class="display-3 fw-bold mb-4 animate__animated animate__slideInDown" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                            <i class="fas fa-graduation-cap me-3"></i>Welcome to MVC Project
                        </h1>
                        <p class="lead mb-5 animate__animated animate__fadeInUp" style="font-size: 1.3rem; opacity: 0.95;">
                            Where education meets innovation in a symphony of learning and discovery.
                        </p>
                    </div>
                </div>
            </div>
            <div class="floating-shapes">
                <div class="shape shape-1 animate__animated animate__bounceIn"></div>
                <div class="shape shape-2 animate__animated animate__bounceIn" style="animation-delay: 0.2s;"></div>
                <div class="shape shape-3 animate__animated animate__bounceIn" style="animation-delay: 0.4s;"></div>
            </div>
        </section>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-school me-2"></i>Home
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeIn" asp-controller="Instructors" asp-action="Index">
                            <i class="fas fa-chalkboard-teacher me-1"></i>Instructors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeIn" asp-controller="Students" asp-action="Index">
                            <i class="fas fa-user-graduate me-1"></i>Students
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeIn" asp-controller="Courses" asp-action="Index">
                            <i class="fas fa-book me-1"></i>Courses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeIn" asp-controller="Departments" asp-action="Index">
                            <i class="fas fa-building me-1"></i>Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeIn" asp-controller="CourseStudents" asp-action="Index">
                            <i class="fas fa-users me-1"></i>Course Students
                        </a>
                    </li>
                </ul>
                <form class="d-flex me-3" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search">
                    <button class="btn btn-outline-light" type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-copyright me-2"></i>&copy; 2025 - MVC Project</h5>
                    <p class="mb-0 opacity-75">Your comprehensive educational management system.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><i class="fas fa-envelope me-2"></i>contact@mvcproject.com</li>
                        <li class="mb-1"><i class="fas fa-phone me-2"></i>+1 (555) 123-4567</li>
                        <li><i class="fas fa-globe me-2"></i><a href="#" class="text-white text-decoration-none">www.mvcproject.com</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="text-uppercase">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none opacity-75">Home</a></li>
                        <li><a href="#" class="text-white text-decoration-none opacity-75">About</a></li>
                        <li><a href="#" class="text-white text-decoration-none opacity-75">Services</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="text-uppercase">Legal</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none opacity-75">Privacy Policy</a></li>
                        <li><a href="#" class="text-white text-decoration-none opacity-75">Terms of Service</a></li>
                        <li><a href="#" class="text-white text-decoration-none opacity-75">Cookie Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="text-uppercase">Connect</h6>
                    <div class="d-flex justify-content-md-end">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-linkedin-in fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-instagram fa-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Custom JS for Animations -->
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.background = 'rgba(99, 102, 241, 0.95)';
                navbar.style.backdropFilter = 'blur(10px)';
            } else {
                navbar.style.background = 'transparent';
                navbar.style.backdropFilter = 'none';
            }
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Navbar stagger animation
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach((link, index) => {
            link.style.animationDelay = `${index * 0.1}s`;
            link.classList.add('animate__fadeInUp');
        });
    </script>
</body>
</html>